{
  "rules": {
    "profiles": {
      ".read": "auth != null && root.child('user_roles').child(auth.uid).child('role').val() === 'admin'",
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && (root.child('user_roles').child(auth.uid).child('role').val() === 'admin' || $uid === auth.uid)"
      }
    },
    "user_roles": {
      ".read": "auth != null && root.child('user_roles').child(auth.uid).child('role').val() === 'admin'",
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null && (root.child('user_roles').child(auth.uid).child('role').val() === 'admin' || ($uid === auth.uid && !data.exists()))"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('user_roles').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('user_roles').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "meta": {
      "firstAdminUid": {
        ".read": true,
        ".write": "auth != null && !data.exists()"
      }
    }
  }
}
